{
    "name": "Trigger for NinjaOne",
    "version": "0.8.1",
    "manifest_version": 3,
    "description": "This extension extends the functionality of NinjaOne.",
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": [
        "storage"
      ],
      "host_permissions": [
        "https://*.rmmservice.eu/#/deviceDashboard/",
        "https://eu.ninjarmm.com/#/deviceDashboard/"
      ],
    "icons": {
        "16": "icons/Trigger_Favicon_16.png",
        "32": "icons/Trigger_Favicon_32.png",
        "48": "icons/Trigger_Favicon_48.png",
        "128": "icons/Trigger_Favicon_128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
          "matches": [
            "https://eu.ninjarmm.com/*",
            "https://*.rmmservice.eu/*",
            "https://app.ninjarmm.com/*",
            "https://*.rmmservice.com/*",
            "https://oc.ninjarmm.com/",
            "https://*.rmmservice.com.au/*",
            "https://ca.ninjarmm.com/*",
            "https://*.rmmservice.ca/*"
          ],
          "js": ["lib/jquery.min.js", "content-scripts/content.js"]
      }
    ]
}