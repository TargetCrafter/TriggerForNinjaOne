{
  "name": "Trigger+ for NinjaOne",
  "version": "0.9.1",
  "manifest_version": 3,
  "description": "This extension extends the functionality of NinjaOne.",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https: 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "triggerforninjaone@vertc.nl",
      "strict_min_version": "58.0"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/Trigger+_Favicon_16.png",
    "32": "icons/Trigger+_Favicon_32.png",
    "48": "icons/Trigger+_Favicon_48.png",
    "128": "icons/Trigger+_Favicon_128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://eu.ninjarmm.com/*",
        "https://*.rmmservice.eu/*",
        "https://app.ninjarmm.com/*",
        "https://*.rmmservice.com/*",
        "https://oc.ninjarmm.com/",
        "https://*.rmmservice.com.au/*",
        "https://ca.ninjarmm.com/*",
        "https://*.rmmservice.ca/*"
      ],
      "js": [
        "lib/jquery.min.js",
        "content-injection/injectButton.js"
      ],
      "css": ["content-injection/darkTheme.css"],
      "run_at": "document_start"
    }
  ]
}